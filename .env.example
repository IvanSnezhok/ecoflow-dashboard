# Ecoflow API Credentials
# Get these from https://developer.ecoflow.com
ECOFLOW_ACCESS_KEY=your_access_key_here
ECOFLOW_SECRET_KEY=your_secret_key_here

# API Endpoint
# Use api-e.ecoflow.com for Europe
# Use api-a.ecoflow.com for Americas/Australia
ECOFLOW_API_ENDPOINT=https://api-e.ecoflow.com

# MQTT Broker
# Use mqtt-e.ecoflow.com for Europe
# Use mqtt-a.ecoflow.com for Americas/Australia
ECOFLOW_MQTT_BROKER=mqtt-e.ecoflow.com

# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:5173
